                                    <Label Content="end date"  Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Button  Name="search" Grid.Column="4" Style="{StaticResource MaterialDesignFlatAccentBgButton}" Command="{Binding SearchHistoryCommand}" Content="search" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="75">
                                    <Button.CommandParameter>
                                        <MultiBinding Converter="{StaticResource MyConverter}">
                                            <Binding Path="SelectedDate" ElementName="startDate"/>
                                            <Binding Path="SelectedDate" ElementName="endDate"/>
                                        </MultiBinding>
                                    </Button.CommandParameter>
                                </Button>
                                </Grid>


